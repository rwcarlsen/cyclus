<simulation>
  <schematype>flat</schematype>
  <control>
    <duration>{{dur}}</duration>
    <startmonth>1</startmonth>
    <startyear>2000</startyear>
  </control>

  <archetypes>
    <spec> {{path}} <lib>{{lib}}</lib><name>{{name}}</name> </spec>
    <spec> <lib>agents</lib><name>Sink</name> </spec>
    <spec> <lib>agents</lib><name>Source</name> </spec>
  </archetypes>

  <prototype>
    <name>source0</name>
    <config>
      <Source>
        <commod>commod0</commod>
        <recipe_name>dummy_recipe</recipe_name>
        <capacity>1e30</capacity>
      </Source>
    </config>
  </prototype>

  <prototype>
    <name>source1</name>
    <config>
      <Source>
        <commod>commod1</commod>
        <recipe_name>dummy_recipe</recipe_name>
        <capacity>1e30</capacity>
      </Source>
    </config>
  </prototype>

  <prototype>
    <name>source2</name>
    <config>
      <Source>
        <commod>commod2</commod>
        <recipe_name>dummy_recipe</recipe_name>
        <capacity>1e30</capacity>
      </Source>
    </config>
  </prototype>

  <prototype>
    <name>source3</name>
    <config>
      <Source>
        <commod>commod3</commod>
        <recipe_name>dummy_recipe</recipe_name>
        <capacity>1e30</capacity>
      </Source>
    </config>
  </prototype>

  <prototype>
    <name>sink</name>
    <config>
      <Sink>
        <in_commods>
            <val>waste0</val>
            <val>waste1</val>
            <val>waste2</val>
            <val>waste3</val>
            <val>waste4</val>
            <val>waste5</val>
            <val>waste6</val>
            <val>waste7</val>
            <val>waste8</val>
            <val>waste9</val>
        </in_commods>
        <capacity>1e30</capacity>
      </Sink>
    </config>
  </prototype>

  <prototype>
    <name>snaptest_prototype</name>
    <config>
      <{{name}}>
        {{config}}
      </{{name}}>
    </config>
  </prototype>

  <agent>
    <name>snaptest_agent1</name>
    <prototype>snaptest_prototype</prototype>
  </agent>

  <agent>
    <name>src0</name>
    <prototype>source0</prototype>
  </agent>

  <agent>
    <name>src1</name>
    <prototype>source1</prototype>
  </agent>

  <agent>
    <name>src2</name>
    <prototype>source2</prototype>
  </agent>

  <agent>
    <name>src3</name>
    <prototype>source3</prototype>
  </agent>

  <agent>
    <name>snk</name>
    <prototype>sink</prototype>
  </agent>

  <recipe>
    <name>dummy_recipe</name>
    <basis>mass</basis>
    <nuclide> <id>010010000</id> <comp>1</comp> </nuclide>
  </recipe>
  <recipe>
    <name>dummy_recipe2</name>
    <basis>mass</basis>
    <nuclide> <id>010010000</id> <comp>1</comp> </nuclide>
  </recipe>

</simulation>
